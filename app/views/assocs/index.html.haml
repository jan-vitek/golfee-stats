- model_class = Assoc
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:golfer_id)
      %th= model_class.human_attribute_name(:player_id)
      %th= model_class.human_attribute_name(:tip_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @assocs.each do |assoc|
      %tr
        %td= link_to assoc.id, assoc_path(assoc)
        %td= assoc.golfer_id
        %td= assoc.player_id
        %td= assoc.tip_id
        %td=l assoc.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_assoc_path(assoc), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), assoc_path(assoc), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_assoc_path, :class => 'btn btn-primary'
