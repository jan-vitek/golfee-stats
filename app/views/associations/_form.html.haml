= form_for @association, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :golfer_id, :class => 'control-label'
    .controls
      = f.number_field :golfer_id, :class => 'number_field'
  .control-group
    = f.label :player_id, :class => 'control-label'
    .controls
      = f.number_field :player_id, :class => 'number_field'
  .control-group
    = f.label :tip_id, :class => 'control-label'
    .controls
      = f.number_field :tip_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), associations_path, :class => 'btn'
