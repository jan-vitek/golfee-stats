- model_class = Association
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:golfer_id) + ':'
  %br
  = @association.golfer_id
%p
  %strong= model_class.human_attribute_name(:player_id) + ':'
  %br
  = @association.player_id
%p
  %strong= model_class.human_attribute_name(:tip_id) + ':'
  %br
  = @association.tip_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), associations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_association_path(@association), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), association_path(@association), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
