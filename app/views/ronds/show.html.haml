- model_class = Rond
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @rond.number

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), ronds_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_rond_path(@rond), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), rond_path(@rond), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
