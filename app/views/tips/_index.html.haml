- model_class = Tip
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th
        Round
      %th 
        Player name
      %th
        Golfer1
      %th
        Golfer2
      %th
        Golfer3
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tips.each do |tip|
      %tr
        %td= link_to tip.id, tip_path(tip)
        %td= tip.rond.number
        %td
          = tip.players.first.name
        %td
          = tip.golfers.first.name
        %td
          = tip.golfers.second.name
        %td
          = tip.golfers.third.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_tip_path(tip), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), tip_path(tip), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_tip_path, :class => 'btn btn-primary'
